{
  "plugins": [
    "html",
    "yaml"
  ],
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "max-ten": {
        "max": 3
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "である",
        "strict": false
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "：", "!", "！", "?", "？"]
      },
      "ja-no-successive-word": false,
      "ja-no-redundant-expression": false
    }
  },
  "filters": {
    "comments": true
  }
}