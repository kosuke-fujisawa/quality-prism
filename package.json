{
  "name": "quality-prism",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 127.0.0.1 --port 3000",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "textlint": "textlint --rule sentence-length --rule max-ten --rule no-hankaku-kana 'public/scenarios/*.yaml'",
    "textlint:fix": "textlint --fix --rule sentence-length --rule max-ten --rule no-hankaku-kana 'public/scenarios/*.yaml'"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "fake-indexeddb": "^6.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "textlint": "^15.2.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-japanese": "^10.0.4",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "dexie": "^4.0.11",
    "js-yaml": "^4.1.0"
  }
}
